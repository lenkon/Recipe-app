<header class="masthead">
  <div class="container-fluid px-0">
    <div class="masthead-subheading">Welcome To Recipe App!</div>
        <div class="masthead-heading text-uppercase">Let's create a recipe</div>
        <% if current_user.nil? %>    
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-xl text-uppercase"  %>
        <% else %>
          <%= link_to "Add food", new_food_path, class: "btn btn-primary btn-xl"  %>
          <%= link_to "Add recipe", new_recipe_path, class: "btn btn-primary btn-xl"  %>
        <% end %>
        </div>
    </div>
  </div>