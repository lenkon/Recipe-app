<p style="color: MediumSeaGreen"><%= notice %></p>
<%= render 'description', recipe: @recipe %>

<% if can? :update, @recipe %>
  <%= render "add_modal", recipe: @recipe %>
<% end %>

<%= render "add_food", recipe: @recipe %>
<div class="container d-flex justify-content-between my-5">
  <div>
    <% if can? :update, @recipe %>
    <%= link_to "Edit recipe", edit_recipe_path(@recipe) %> 
  | <% end %>
    <%= link_to "All Recipes", recipes_path %>
  </div>
  <div>
  <% if can? :destroy, @recipe %>
    <%= button_to "Delete", @recipe, method: :delete %>
  <% end %>
  </div>
</div>